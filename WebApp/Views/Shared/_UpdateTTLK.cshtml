@model ViewModels.Danhsachlinhkien.DanhsachlinhkienVm


<div class="modal-header" style="text-align:center">
    <h5 class="modal-title">
        <i class="fa fa-edit fa-fw"> </i>
        Sửa thông tin linh kiện
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
<div class="modal-body">
    <div class="col-lg-12" id="myForm">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label style="font-weight: 500;">Model</label>
                        <select class="form-control" style="text-align:center" name="Model" asp-items="@ViewBag.Models ">
                        </select>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label style="font-weight: 500;">Tồn kho</label>
                        <input asp-for="Tonkho" class="form-control" />
                        <span asp-validation-for="Tonkho" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label style="font-weight: 500;">Tên Jig</label>
                        <input asp-for="Tenjig" class="form-control" />
                        <span asp-validation-for="Tenjig" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label style="font-weight: 500;">Mã Jig</label>
                        <input asp-for="Majig" class="form-control" />
                        <span asp-validation-for="Majig" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label style="font-weight: 500;">Tên linh kiện</label>
                        <input asp-for="Tenlinhkien" class="form-control" />
                        <span asp-validation-for="Tenlinhkien" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label style="font-weight: 500;">Mã linh kiện</label>
                        <input asp-for="Malinhkien" class="form-control" />
                        <span asp-validation-for="Malinhkien" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label style="font-weight: 500;">Maker</label>
                        <input asp-for="Maker" class="form-control" />
                        <span asp-validation-for="Maker" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label style="font-weight: 500;">Đơn vị</label>
                        <input asp-for="Donvi" class="form-control" />
                        <span asp-validation-for="Donvi" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label style="font-weight: 500;">Đơn giá</label>
                        <input asp-for="Dongia" class="form-control" />
                        <span asp-validation-for="Dongia" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label style="font-weight: 500;">Ghi chú</label>
                        <input asp-for="Ghichu" class="form-control" />
                        <span asp-validation-for="Ghichu" class="text-danger"></span>
                    </div>
                </div>
            </div>
    </div>
</div>
<div class="modal-footer justify-content-between">
    <button type="button" class="btn btn-outline-danger" data-dismiss="modal"><i class="fa fa-times fa-fw"></i> Huỷ bỏ</button>
    <button id="btnXacNhanUpdateLinhKien" type="button" class="btn btn-success" data-id="@Model.Id" ><i class="fa fa-check fa-fw"> </i> Xác nhận</button>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
    <script src="~/scripts/danhsachlinhkien/UpdateTTLK.js"></script>